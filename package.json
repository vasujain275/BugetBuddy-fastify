    "argon2": "^0.40.3",
    "drizzle-orm": "^0.31.2",
    "fastify": "^4.28.1",
    "fastify-zod": "^1.4.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.1"
  }
